[Unit]
Description={{{ID}}} node service
After=network.target
StartLimitIntervalSec=0

[Service]
User={{{USER}}}
Group={{{USER}}}

Type=simple
Restart=always
RestartSec=1

Environment="HOME={{{ROOT_DIR}}}/data"

ExecStart={{{ROOT_DIR}}}/bin/node run --rpc-addr {{{model.RPC_ADDR}}} {{{configuration.STARTUP_ARGS__CLI_ARGS}}}

{{#model.SERVICE_CONFIGURATION__ARRAY}}
{{{key}}}={{{value}}}
{{/model.SERVICE_CONFIGURATION__ARRAY}}

[Install]
WantedBy=default.target